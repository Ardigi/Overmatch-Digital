# Reporting Service E2E Test Environment Variables

# Node Environment
NODE_ENV=test

# Service Configuration
PORT=3007

# Database Configuration - Test Database
DB_HOST=127.0.0.1
DB_PORT=5433
DB_USERNAME=test_user
DB_PASSWORD=test_pass
DB_NAME=soc_reporting_test

# Redis Configuration - Test Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6380
REDIS_PASSWORD=test_redis_pass

# Kafka Configuration - Test Kafka
KAFKA_BROKERS=localhost:9093
KAFKA_CLIENT_ID=reporting-service-test
KAFKA_GROUP_ID=reporting-service-group-test

# Storage Configuration - Test Storage
STORAGE_PROVIDER=local
STORAGE_PATH=/tmp/reports-test
S3_BUCKET_REPORTS=soc-reports-test

# Report Generation
REPORT_TEMPLATE_PATH=/templates
REPORT_TEMP_PATH=/tmp/reports-temp
REPORT_RETENTION_DAYS=90

# PDF Generation
PDF_ENGINE=puppeteer
PUPPETEER_EXECUTABLE_PATH=
CHROME_NO_SANDBOX=true

# Report Queue Configuration
REPORT_QUEUE_NAME=report-generation-test
MAX_CONCURRENT_REPORTS=3
REPORT_TIMEOUT_MS=60000
REPORT_CACHE_TTL=3600

# Report Scheduling
ENABLE_SCHEDULED_REPORTS=true
DEFAULT_REPORT_TIMEZONE=America/New_York
SCHEDULER_INTERVAL_MS=60000

# External Service URLs (Test Instances)
AUTH_SERVICE_URL=http://localhost:3001
CLIENT_SERVICE_URL=http://localhost:3002
POLICY_SERVICE_URL=http://localhost:3003
CONTROL_SERVICE_URL=http://localhost:3004
EVIDENCE_SERVICE_URL=http://localhost:3005
AUDIT_SERVICE_URL=http://localhost:3008
NOTIFICATION_SERVICE_URL=http://localhost:3010

# Report Types
ENABLE_SOC1_REPORTS=true
ENABLE_SOC2_REPORTS=true
ENABLE_ISO27001_REPORTS=true
ENABLE_HIPAA_REPORTS=true
ENABLE_GDPR_REPORTS=true
ENABLE_CUSTOM_REPORTS=true

# Performance
MAX_REPORT_SIZE_MB=100
ENABLE_REPORT_COMPRESSION=true
COMPRESSION_LEVEL=6

# Security
ENABLE_REPORT_ENCRYPTION=false
REPORT_SIGNING_KEY=test-signing-key
ENABLE_WATERMARK=true
WATERMARK_TEXT=CONFIDENTIAL - TEST

# Testing
ENABLE_TEST_MODE=true
MOCK_EXTERNAL_SERVICES=true
DISABLE_PDF_GENERATION=false