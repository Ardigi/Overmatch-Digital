# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# Kong Konnect Configuration (REQUIRED - NOT LOCAL KONG)
# Get these values from your Kong Konnect dashboard at https://cloud.konghq.com
NEXT_PUBLIC_KONNECT_GATEWAY_URL=https://gateway.soc-platform.com
KONNECT_CONTROL_PLANE_URL=https://api.konghq.com
KONNECT_PAT=your-konnect-personal-access-token
KONNECT_RUNTIME_GROUP=production

# DEPRECATED - Local Kong is NOT supported
# NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:8000  # DO NOT USE

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your-secure-keycloak-admin-password

# Encryption Configuration (Control Service)
# Generate with: docker-secrets/create-dev-secrets.ps1
# Must be 64 hex characters (256-bit key) for AES-256-GCM
MASTER_ENCRYPTION_KEY=your-256-bit-encryption-key-in-hex-format-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/overmatch_digital

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
AZURE_AD_CLIENT_ID=your-azure-client-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_TENANT_ID=your-azure-tenant-id

# AWS Configuration (for evidence storage and cloud collectors)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=soc-compliance-evidence

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# OpenAI Configuration (for AI service)
OPENAI_API_KEY=your-openai-api-key

# Grafana Admin Password - MUST be changed for production
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-admin-password

# Okta Integration (optional)
OKTA_DOMAIN=your-domain.okta.com
OKTA_API_TOKEN=your-okta-api-token

# CaseWare Integration (optional)
CASEWARE_API_KEY=your-caseware-api-key
CASEWARE_BASE_URL=https://api.caseware.com

# TeamMate Integration (optional)
TEAMMATE_API_KEY=your-teammate-api-key
TEAMMATE_BASE_URL=https://api.teammate.com
TEAMMATE_ORG_ID=your-org-id

# Service URLs (All services must use /api/v1 prefix)
# In production, these are accessed through Kong Konnect, not directly
AUTH_SERVICE_URL=http://auth-service:3001/api/v1
CLIENT_SERVICE_URL=http://client-service:3002/api/v1
POLICY_SERVICE_URL=http://policy-service:3003/api/v1
CONTROL_SERVICE_URL=http://control-service:3004/api/v1
EVIDENCE_SERVICE_URL=http://evidence-service:3005/api/v1
WORKFLOW_SERVICE_URL=http://workflow-service:3006/api/v1
REPORTING_SERVICE_URL=http://reporting-service:3007/api/v1
AUDIT_SERVICE_URL=http://audit-service:3008/api/v1
INTEGRATION_SERVICE_URL=http://integration-service:3009/api/v1
NOTIFICATION_SERVICE_URL=http://notification-service:3010/api/v1
AI_SERVICE_URL=http://ai-service:3011/api/v1

# Service Health Check Settings
SERVICE_HEALTH_CHECK_INTERVAL=60000
SERVICE_TIMEOUT=30000
SERVICE_RETRIES=3