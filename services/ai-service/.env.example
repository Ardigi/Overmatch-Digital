# AI Service Environment Variables

# Node Environment
NODE_ENV=development

# Service Configuration
SERVICE_NAME=ai-service
PORT=3011
SERVICE_PORT=3011

# MongoDB Configuration
MONGO_URI=mongodb://soc_user:soc_pass@localhost:27017/soc_ai

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=soc_redis_pass

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ai-service
KAFKA_GROUP_ID=ai-service-group

# AI Provider Configuration - Development (Mock)
AI_PROVIDER=mock
AI_MOCK_DELAY=500
AI_MOCK_ERROR_RATE=0.05

# AI Provider Configuration - Production (OpenAI)
# AI_PROVIDER=openai
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_ORGANIZATION=your-org-id
# OPENAI_MODEL_CHAT=gpt-4-turbo-preview
# OPENAI_MODEL_EMBEDDING=text-embedding-3-small
# OPENAI_MODEL_COMPLETION=gpt-3.5-turbo-instruct
# OPENAI_TEMPERATURE=0.7
# OPENAI_MAX_TOKENS=2000
# OPENAI_TOP_P=1
# OPENAI_FREQUENCY_PENALTY=0
# OPENAI_PRESENCE_PENALTY=0

# AI Provider Configuration - Azure OpenAI (Alternative)
# AI_PROVIDER=azure-openai
# AZURE_OPENAI_API_KEY=your-azure-api-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4-deployment
# AZURE_OPENAI_EMBEDDING_DEPLOYMENT=embedding-deployment
# AZURE_OPENAI_COMPLETION_DEPLOYMENT=completion-deployment

# AI Features
AI_FEATURE_COMPLIANCE=true
AI_FEATURE_RISK=true
AI_FEATURE_CONTROL=true
AI_FEATURE_SUMMARY=true
AI_FEATURE_ANOMALY=true
AI_FEATURE_NLQ=true

# AI Rate Limits
AI_RATE_LIMIT_RPM=60
AI_RATE_LIMIT_TPM=90000
AI_CONCURRENT_REQUESTS=10

# AI Cache Configuration
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600
AI_CACHE_MAX_SIZE=500

# AI Safety Configuration
AI_CONTENT_FILTERING=true
AI_PII_DETECTION=true
AI_AUDIT_LOGGING=true

# Vector Database Configuration
VECTOR_DB_ENABLED=true
VECTOR_DB_COLLECTION=soc_embeddings
VECTOR_DB_DIMENSION=1536

# Model Fine-tuning
FINE_TUNING_ENABLED=false
FINE_TUNING_MODEL_ID=

# CORS
CORS_ORIGINS=http://localhost:3000