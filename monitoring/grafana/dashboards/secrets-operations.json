{
  "dashboard": {
    "id": null,
    "title": "Secrets Management - Operations Dashboard",
    "tags": ["secrets", "security", "operations"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Secret Access Operations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(secrets_access_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 50 },
                { "color": "red", "value": 100 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Secret Access Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(secrets_access_total{result=\"success\"}[5m])) / sum(rate(secrets_access_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 95 },
                { "color": "green", "value": 99 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "Provider Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "secrets_provider_health_status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "options": { "0": { "text": "Unhealthy", "color": "red" } }, "type": "value" },
              { "options": { "1": { "text": "Healthy", "color": "green" } }, "type": "value" }
            ]
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
      },
      {
        "id": 4,
        "title": "Secrets Due for Rotation",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(secrets_rotation_due_count)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 5,
        "title": "Secret Access Rate by Provider",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(secrets_access_total[5m])) by (provider)",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 },
        "yAxes": [{ "unit": "ops", "min": 0 }, { "unit": "short" }]
      },
      {
        "id": 6,
        "title": "Secret Access Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(secrets_access_duration_seconds_bucket[5m])) by (le, provider))",
            "refId": "A",
            "legendFormat": "p50 - {{provider}}"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(secrets_access_duration_seconds_bucket[5m])) by (le, provider))",
            "refId": "B",
            "legendFormat": "p95 - {{provider}}"
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 },
        "yAxes": [{ "unit": "s", "min": 0 }, { "unit": "short" }]
      },
      {
        "id": 7,
        "title": "Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(secrets_cache_operations_total{operation=\"hit\"}[5m])",
            "refId": "A",
            "legendFormat": "Cache Hits"
          },
          {
            "expr": "rate(secrets_cache_operations_total{operation=\"miss\"}[5m])",
            "refId": "B",
            "legendFormat": "Cache Misses"
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 17 },
        "yAxes": [{ "unit": "ops", "min": 0 }, { "unit": "short" }]
      },
      {
        "id": 8,
        "title": "Provider Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(secrets_provider_response_time_seconds_bucket[5m])) by (le, provider))",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 17 },
        "yAxes": [{ "unit": "s", "min": 0 }, { "unit": "short" }]
      },
      {
        "id": 9,
        "title": "Rotation Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(secrets_rotation_total{result=\"success\"}[5m]))",
            "refId": "A",
            "legendFormat": "Successful Rotations"
          },
          {
            "expr": "sum(rate(secrets_rotation_total{result=\"failure\"}[5m]))",
            "refId": "B",
            "legendFormat": "Failed Rotations"
          }
        ],
        "gridPos": { "h": 9, "w": 24, "x": 0, "y": 26 },
        "yAxes": [{ "unit": "ops", "min": 0 }, { "unit": "short" }]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
