# Reporting Service Environment Variables

# Node Environment
NODE_ENV=development

# Service Configuration
SERVICE_NAME=reporting-service
PORT=3007
SERVICE_PORT=3007

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=soc_user
DB_PASSWORD=soc_pass
DB_NAME=soc_reporting

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=soc_redis_pass

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=reporting-service
KAFKA_GROUP_ID=reporting-service-group

# Storage Configuration - Development (MinIO)
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=soc_admin
MINIO_SECRET_KEY=soc_password
S3_BUCKET_REPORTS=soc-reports

# Storage Configuration - Production (AWS S3)
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_REPORTS=soc-compliance-reports

# Report Generation
REPORT_TEMPLATE_PATH=/templates
REPORT_TEMP_PATH=/tmp/reports
REPORT_RETENTION_DAYS=2555

# PDF Generation
PDF_ENGINE=puppeteer
PUPPETEER_EXECUTABLE_PATH=
CHROME_NO_SANDBOX=false

# Email Integration
NOTIFICATION_SERVICE_URL=http://localhost:3010

# Report Scheduling
ENABLE_SCHEDULED_REPORTS=true
DEFAULT_REPORT_TIMEZONE=America/New_York

# Performance
MAX_CONCURRENT_REPORTS=5
REPORT_TIMEOUT_MS=300000
REPORT_CACHE_TTL=3600

# Security
ENABLE_REPORT_ENCRYPTION=false
REPORT_SIGNING_KEY=

# CORS
CORS_ORIGINS=http://localhost:3000