# Notification Service E2E Test Environment Variables

# Node Environment
NODE_ENV=test

# Service Configuration
PORT=3010

# Database Configuration - Test PostgreSQL
DB_HOST=127.0.0.1
DB_PORT=5433
DB_USERNAME=soc_user
DB_PASSWORD=soc_pass
DB_NAME=soc_notifications_test

# JWT Configuration
JWT_SECRET=test-jwt-secret-key

# Redis Configuration - Test Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6380
REDIS_PASSWORD=test_redis_pass

# Kafka Configuration - Test Kafka
KAFKA_BROKERS=127.0.0.1:9093
KAFKA_CLIENT_ID=notification-service-test
KAFKA_GROUP_ID=notification-service-group-test
DISABLE_KAFKA=true

# Email Configuration - Test MailDev
SMTP_HOST=127.0.0.1
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@soc-test.com
SMTP_FROM_NAME=SOC Compliance Test

# SMS Configuration (Mock for testing)
SMS_PROVIDER=mock
TWILIO_ACCOUNT_SID=test_account_sid
TWILIO_AUTH_TOKEN=test_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Push Notification Configuration (Mock for testing)
PUSH_PROVIDER=mock
FCM_SERVER_KEY=test_fcm_key

# In-App Notification Configuration
ENABLE_IN_APP_NOTIFICATIONS=true
IN_APP_RETENTION_DAYS=30

# WebSocket Configuration
ENABLE_WEBSOCKET=true
WS_PORT=3010
WS_CORS_ORIGIN=http://localhost:3000

# Queue Configuration
NOTIFICATION_QUEUE_NAME=notifications-test
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Template Configuration
TEMPLATE_CACHE_TTL=3600
ENABLE_TEMPLATE_VALIDATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Batch Processing
ENABLE_BATCH_PROCESSING=true
BATCH_SIZE=50
BATCH_INTERVAL_MS=5000

# Delivery Tracking
ENABLE_DELIVERY_TRACKING=true
TRACK_OPEN_RATES=true
TRACK_CLICK_RATES=true

# External Service URLs (Test Instances)
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002

# Testing
ENABLE_TEST_MODE=true
DISABLE_ACTUAL_SENDING=true
CAPTURE_SENT_NOTIFICATIONS=true