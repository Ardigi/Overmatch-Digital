PORT=3009
SERVICE_PORT=3009

# Database
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=soc_user
DB_PASSWORD=soc_pass
DB_NAME=soc_integrations

# Redis
REDIS_HOST=localhost
