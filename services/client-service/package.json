{
  "name": "@soc-compliance/client-service",
  "version": "1.0.0",
  "description": "Client and Organization Management Service",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest --config jest.config.unit.js",
    "test:watch": "jest --config jest.config.unit.js --watch",
    "test:cov": "jest --config jest.config.unit.js --coverage",
    "test:e2e": "dotenv -e test/e2e/test.env -- jest --config jest.config.e2e.js --runInBand",
    "test:e2e:watch": "dotenv -e test/e2e/test.env -- jest --config jest.config.e2e.js --watch --runInBand",
    "test:integration": "jest --config ./jest.integration.config.js --runInBand",
    "test:integration:watch": "jest --config ./jest.integration.config.js --watch --runInBand",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:generate": "npm run typeorm -- -d ./src/config/typeorm.config.ts migration:generate",
    "migration:run": "npm run typeorm -- -d ./src/config/typeorm.config.ts migration:run",
    "migration:revert": "npm run typeorm -- -d ./src/config/typeorm.config.ts migration:revert",
    "migration:show": "npm run typeorm -- -d ./src/config/typeorm.config.ts migration:show",
    "start:direct": "node dist/main.js"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^11.1.6",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.2.0",
    "@nestjs/terminus": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@soc-compliance/auth-common": "file:../../packages/auth-common",
    "@soc-compliance/events": "file:../../shared/events",
    "@soc-compliance/http-common": "^1.0.0",
    "@soc-compliance/monitoring": "file:../../packages/monitoring",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "kafkajs": "^2.2.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
