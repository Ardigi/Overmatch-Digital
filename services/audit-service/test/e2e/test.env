# Audit Service E2E Test Environment Variables

# Node Environment
NODE_ENV=test

# Service Configuration
PORT=3008

# Database Configuration - Test Database
DB_HOST=127.0.0.1
DB_PORT=5433
DB_USERNAME=test_user
DB_PASSWORD=test_pass
DB_NAME=soc_audits_test

# Redis Configuration - Test Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6380
REDIS_PASSWORD=test_redis_pass

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-audit-service
JWT_EXPIRATION=24h
JWT_EXPIRES_IN=30m

# Disable Kafka for faster testing
DISABLE_KAFKA=true

# Kafka Configuration - Test Kafka
KAFKA_BROKERS=localhost:9093
KAFKA_CLIENT_ID=audit-service-test
KAFKA_GROUP_ID=audit-service-group-test

# Audit Configuration
DEFAULT_AUDIT_DURATION_DAYS=90
MAX_FINDINGS_PER_AUDIT=1000
ENABLE_AUTO_SCHEDULING=true

# Evidence Collection
MAX_EVIDENCE_SIZE_MB=50
SUPPORTED_EVIDENCE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg,txt,csv
EVIDENCE_RETENTION_DAYS=2555

# Finding Management
FINDING_SEVERITY_LEVELS=critical,high,medium,low,info
DEFAULT_REMEDIATION_DAYS=30
ENABLE_AUTO_ESCALATION=true
ESCALATION_THRESHOLD_DAYS=7

# Audit Trail
ENABLE_DETAILED_AUDIT_TRAIL=true
AUDIT_TRAIL_RETENTION_DAYS=2555
TRACK_FIELD_CHANGES=true

# External Service URLs (Test Instances)
AUTH_SERVICE_URL=http://localhost:3001
CLIENT_SERVICE_URL=http://localhost:3002
POLICY_SERVICE_URL=http://localhost:3003
CONTROL_SERVICE_URL=http://localhost:3004
EVIDENCE_SERVICE_URL=http://localhost:3005
REPORTING_SERVICE_URL=http://localhost:3007

# Audit Templates
ENABLE_AUDIT_TEMPLATES=true
DEFAULT_SOC2_TEMPLATE=soc2-type2-standard
DEFAULT_ISO27001_TEMPLATE=iso27001-2022

# Sampling Configuration
ENABLE_STATISTICAL_SAMPLING=true
DEFAULT_SAMPLE_SIZE=25
CONFIDENCE_LEVEL=95
TOLERABLE_ERROR_RATE=5

# Performance
MAX_CONCURRENT_AUDITS=10
AUDIT_CACHE_TTL=3600

# Security
ENABLE_EVIDENCE_ENCRYPTION=false
EVIDENCE_SIGNING_KEY=test-signing-key

# Testing
ENABLE_TEST_MODE=true
MOCK_EXTERNAL_SERVICES=false