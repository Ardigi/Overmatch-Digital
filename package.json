{
  "name": "soc-compliance-platform",
  "version": "1.0.0",
  "description": "Enterprise SOC 1/2 Compliance Platform with Microservices Architecture",
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "node node_modules/next/dist/bin/next dev",
    "dev:services": "concurrently \"cd services/auth-service && npm run dev\" \"cd services/client-service && npm run dev\" \"cd services/audit-service && npm run dev\"",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:services\"",
    "build": "node node_modules/next/dist/bin/next build",
    "build:services": "npm run build --workspaces --if-present",
    "build:shared": "npm run build --workspace=@soc-compliance/contracts && npm run build --workspace=@soc-compliance/events && npm run build --workspace=@soc-compliance/auth-common && npm run build --workspace=@soc-compliance/http-common && npm run build --workspace=@soc-compliance/cache-common && npm run build --workspace=@soc-compliance/monitoring && npm run build --workspace=@soc-compliance/secrets",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "powershell -ExecutionPolicy Bypass -File ./scripts/run-e2e-tests.ps1",
    "test:e2e:all": "powershell -ExecutionPolicy Bypass -File ./scripts/run-e2e-tests.ps1 -Service all",
    "test:e2e:auth": "powershell -ExecutionPolicy Bypass -File ./scripts/run-e2e-tests.ps1 -Service auth",
    "test:e2e:docker": "docker-compose -f docker/testing/docker-compose.e2e.yml up --abort-on-container-exit --exit-code-from test-runner",
    "e2e:start": "docker-compose -f docker/testing/docker-compose.e2e.yml up -d",
    "e2e:stop": "docker-compose -f docker/testing/docker-compose.e2e.yml down -v",
    "e2e:logs": "docker-compose -f docker/testing/docker-compose.e2e.yml logs -f",
    "e2e:cleanup": "powershell -ExecutionPolicy Bypass -File ./scripts/e2e/cleanup-test-data.ps1 -Full",
    "test:integration": "powershell -ExecutionPolicy Bypass -File ./scripts/run-integration-tests.ps1",
    "test:integration:setup": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-integration-environment.ps1",
    "test:integration:verify": "powershell -ExecutionPolicy Bypass -File ./scripts/verify-integration-infrastructure.ps1",
    "test:integration:report": "powershell -ExecutionPolicy Bypass -File ./scripts/generate-integration-report.ps1",
    "test:integration:all": "powershell -ExecutionPolicy Bypass -File ./scripts/run-integration-tests.ps1 -Service all -GenerateReport",
    "test:integration:auth": "powershell -ExecutionPolicy Bypass -File ./scripts/run-integration-tests.ps1 -Service auth -Detailed",
    "test:integration:client": "powershell -ExecutionPolicy Bypass -File ./scripts/run-integration-tests.ps1 -Service client -Detailed",
    "test:integration:notification": "powershell -ExecutionPolicy Bypass -File ./scripts/run-integration-tests.ps1 -Service notification -Detailed",
    "test:integration:redis": "powershell -ExecutionPolicy Bypass -File ./scripts/run-integration-tests.ps1 -Category redis -Service all",
    "test:integration:database": "powershell -ExecutionPolicy Bypass -File ./scripts/run-integration-tests.ps1 -Category database -Service all",
    "test:integration:communication": "powershell -ExecutionPolicy Bypass -File ./scripts/run-integration-tests.ps1 -Category communication -Service all",
    "test:integration:clean": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-integration-environment.ps1 -Clean",
    "test:integration:dry-run": "powershell -ExecutionPolicy Bypass -File ./scripts/run-integration-tests.ps1 -DryRun",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "biome:fix": "biome check --write --unsafe",
    "type-check": "npm run type-check --workspaces --if-present",
    "monitoring:start": "powershell -ExecutionPolicy Bypass -File ./scripts/start-monitoring.ps1 -Detach",
    "monitoring:stop": "docker-compose -f docker/monitoring/docker-compose.monitoring.yml down",
    "monitoring:logs": "docker-compose -f docker/monitoring/docker-compose.monitoring.yml logs -f"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.1.1",
    "@tanstack/react-query": "^5.83.0",
    "axios": "^1.11.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.6",
    "glob": "^11.0.3",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "kafkajs": "^2.2.4",
    "lucide-react": "^0.525.0",
    "next": "15.0.0",
    "next-auth": "^5.0.0-beta.29",
    "node-fetch": "^3.3.2",
    "path-scurry": "^2.0.0",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-datepicker": "^8.4.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.60.0",
    "react-hot-toast": "^2.5.2",
    "react-select": "^5.10.2",
    "recharts": "^3.1.0",
    "redis": "^5.6.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@eslint/js": "^9.32.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^11.1.6",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.3.0",
    "@nestjs/typeorm": "^10.0.2",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.19",
    "commander": "^12.0.0",
    "concurrently": "^8.2.2",
    "form-data": "^4.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "postcss": "^8.4.38",
    "puppeteer": "^24.16.2",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
