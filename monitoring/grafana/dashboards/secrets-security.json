{
  "dashboard": {
    "id": null,
    "title": "Secrets Management - Security Dashboard",
    "tags": ["secrets", "security", "audit", "compliance"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Security Violations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(secrets_security_violations_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Critical Security Events",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(secrets_security_violations_total{severity=\"critical\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "Rate Limit Violations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(secrets_access_rate_limit_violations)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
      },
      {
        "id": 4,
        "title": "Expired Secrets",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(secrets_expired_count)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 5,
        "title": "Audit Events by Type",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(secrets_audit_events_total[5m])) by (event_type)",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 },
        "yAxes": [{ "unit": "ops", "min": 0 }, { "unit": "short" }]
      },
      {
        "id": 6,
        "title": "Security Violations by Severity",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(secrets_security_violations_total) by (severity)",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 7,
        "title": "Failed Access Attempts",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(secrets_access_total{result=\"failure\"}[5m])) by (provider)",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 17 },
        "yAxes": [{ "unit": "ops", "min": 0 }, { "unit": "short" }]
      },
      {
        "id": 8,
        "title": "Circuit Breaker Status",
        "type": "table",
        "targets": [
          {
            "expr": "secrets_circuit_breaker_state",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "options": { "0": { "text": "Closed", "color": "green" } }, "type": "value" },
              { "options": { "1": { "text": "Open", "color": "red" } }, "type": "value" },
              { "options": { "2": { "text": "Half-Open", "color": "yellow" } }, "type": "value" }
            ]
          }
        },
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 17 }
      },
      {
        "id": 9,
        "title": "Access Patterns Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(secrets_access_total[5m])) by (secret_name)",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 9, "w": 24, "x": 0, "y": 26 },
        "heatmap": {
          "xBucketSize": null,
          "yBucketSize": null,
          "xBucketNumber": null,
          "yBucketNumber": null
        }
      },
      {
        "id": 10,
        "title": "Compliance Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "(1 - (sum(secrets_security_violations_total{severity=~\"high|critical\"}) / sum(secrets_access_total))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 90 },
                { "color": "green", "value": 95 }
              ]
            }
          }
        },
        "gridPos": { "h": 9, "w": 24, "x": 0, "y": 35 }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
