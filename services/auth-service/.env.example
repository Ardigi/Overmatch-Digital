# Auth Service Environment Variables

# Node Environment
NODE_ENV=development

# Service Configuration
SERVICE_NAME=auth-service
PORT=3001
SERVICE_PORT=3001

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=soc_auth

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=soc_redis_pass

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=auth-service
KAFKA_GROUP_ID=auth-service-group

# MFA Configuration
MFA_ISSUER=SOC-Compliance
MFA_WINDOW=1

# Session Configuration
SESSION_TIMEOUT=1800000
SESSION_EXTEND_ON_ACTIVITY=true

# Email Configuration (uses Notification Service)
NOTIFICATION_SERVICE_URL=http://localhost:3010

# Keycloak Configuration (SSO Provider)
KEYCLOAK_URL=http://127.0.0.1:8180
KEYCLOAK_REALM=soc-compliance
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_CLIENT_ID=soc-compliance-app
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# CORS
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100