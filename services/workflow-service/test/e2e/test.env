# Workflow Service E2E Test Environment Variables

# Node Environment
NODE_ENV=test

# Service Configuration
PORT=3006

# Database Configuration - Test Database
DB_HOST=127.0.0.1
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=soc_workflows_test

# Kafka Configuration - Test Kafka
KAFKA_BROKERS=127.0.0.1:9093
KAFKA_CLIENT_ID=workflow-service-test
KAFKA_GROUP_ID=workflow-service-group-test
DISABLE_KAFKA=true

# JWT Configuration
JWT_SECRET=test-jwt-secret-key

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6380
REDIS_PASSWORD=soc_redis_pass

# Workflow Engine Configuration
WORKFLOW_ENGINE_TYPE=internal
MAX_WORKFLOW_RETRIES=3
WORKFLOW_TIMEOUT_MS=300000

# Step Execution
MAX_CONCURRENT_STEPS=10
STEP_TIMEOUT_MS=60000
ENABLE_STEP_LOGGING=true

# Approval Configuration
APPROVAL_TIMEOUT_HOURS=48
ENABLE_AUTO_ESCALATION=true
ESCALATION_DELAY_HOURS=24

# Performance
MAX_WORKFLOW_INSTANCES=100
CLEANUP_INTERVAL_HOURS=24
RETENTION_DAYS=90

# Security
ENABLE_WORKFLOW_ENCRYPTION=false
WORKFLOW_SIGNING_KEY=test-signing-key

# External Service URLs (Test Instances)
AUTH_SERVICE_URL=http://localhost:3001
CLIENT_SERVICE_URL=http://localhost:3002
POLICY_SERVICE_URL=http://localhost:3003
CONTROL_SERVICE_URL=http://localhost:3004
EVIDENCE_SERVICE_URL=http://localhost:3005

# Testing
ENABLE_TEST_MODE=true
TEST_TIMEOUT_MULTIPLIER=2