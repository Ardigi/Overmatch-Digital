{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "tsconfig": {
          "allowJs": false
        }
      }
    ]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testTimeout": 60000,
  "moduleDirectories": ["node_modules", "src"],
  "modulePathIgnorePatterns": ["<rootDir>/dist"],
  "transformIgnorePatterns": ["node_modules/(?!(typeorm)/)"],
  "clearMocks": true
}
