{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,

    // Enable strict mode gradually
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    // Module resolution
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": false,
    "moduleResolution": "node",

    // Path mapping for shared packages
    "paths": {
      "@soc-compliance/contracts": ["../../shared/contracts/dist"],
      "@soc-compliance/events": ["../../shared/events/dist"],
      "@soc-compliance/auth-common": ["../../packages/auth-common/dist"],
      "@soc-compliance/http-common": ["../../packages/http-common/dist"],
      "@soc-compliance/monitoring": ["../../packages/monitoring/dist"],
      "@soc-compliance/cache-common": ["../../packages/cache-common/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts", "test/**/*"]
}
